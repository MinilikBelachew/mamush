{
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended"],
  "plugins": ["@typescript-eslint"],
  "env": {
    "node": true,
    "es2020": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "prefer-const": "error",
    "no-console": "off",
    "no-var": "error",
    "eqeqeq": "error"
  }
}
